#!/bin/bash

source ./source/constants.sh
source ./source/core.sh

# CLI options
HELP_OPTION_LONG="--help"
HELP_OPTION_SHORT="-h"
CLEAR_OPTION="--clear"
LIST_ARGUMENT="list"
RECOVER_ARGUMENT="recover"

# Check options and arguments
while [ "$#" -gt 0 ]; do
  case "${1^^}" in
    "${RECOVER_ARGUMENT^^}")
      recover_objects $2
      shift
      shift
    ;;
    "${LIST_ARGUMENT^^}")
      list_objects
      shift
    ;;
    "${HELP_OPTION_LONG^^}" | "${HELP_OPTION_SHORT^^}")
      show_help
      shift
    ;;
    "${CLEAR_OPTION^^}")
      clear_objects
      shift
    ;;
    *)
      remove_objects $1
      shift
    ;;
  esac
done
